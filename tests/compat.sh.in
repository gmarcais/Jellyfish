if [ -z "$nCPUs" ]; then
    nCPUs=$(grep -c '^processor' /proc/cpuinfo 2>/dev/null || sysctl -n hw.ncpu)
fi
pref=$(basename $0 .sh)
DIR=../bin
JF="$DIR/jellyfish"
[ -n "$VALGRIND" ] && JF="valgrind $JF"
SRCDIR=@abs_top_srcdir@
BUILDDIR=@abs_top_builddir@

check () {
    cut -d\  -f 2 $1 | xargs @MD5@ | sed 's/ \*/ /' | sort -k2,2 | diff -w $DIFFFLAGS $1 -
}

ENABLE_RUBY_BINDING="@RUBY_EXT_LIB@"
RUBY="@RUBY@"
ENABLE_PYTHON_BINDING="@PYTHON@"
PYTHON="@PYTHON@"
ENABLE_PERL_BINDING="@PERL_EXT_LIB@"
PERL="@PERL@"
SAMTOOLS="@SAMTOOLS@"
UNIX2DOS="@UNIX2DOS@"

if [ -n "$DEBUG" ]; then
    set -x;
    DIFFFLAGS="-y"
fi

set -e
